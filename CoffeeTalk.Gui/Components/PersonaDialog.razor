@using CoffeeTalk.Models
@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="Persona.Name" Label="Name" Required="true" />
        <MudTextField @bind-Value="Persona.SystemPrompt" Label="System Prompt" Lines="5" Required="true" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter] public PersonaConfig Persona { get; set; } = new();

    void Submit() => MudDialog.Close(DialogResult.Ok(Persona));
    void Cancel() => MudDialog.Cancel();
}
